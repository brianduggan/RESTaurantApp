<h2>Add a User</h2>

<%= form_for @user do |f| %>
  <%= f.label :username  %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :permission %>
  <select name="user[permission]" id="party_table_num">
    <option value="0">Chef</option>
    <option value="1">Server</option>
    <option value="2">Manager</option>
  </select>
  <%= f.submit %>
<% end %>

<div class="error">
<% if flash[:error] %>
  <% flash[:error].each do |error| %>
    <p class="error"> <%= error %> </p>
  <% end %>
<% end %>
</div>
